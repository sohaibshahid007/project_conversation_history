<div class="container">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary mb-4 shadow-sm rounded">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold text-primary"><i class="bi bi-folder"></i> Projects</a>

      <div class="d-flex">
        <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </nav>

  <% if @projects.any? %>
    <div class="row">
      <% @projects.each do |project| %>
        <%= render 'project', project: project %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center mt-5">
      <h4 class="text-muted"><i class="bi bi-folder-x"></i> No projects found</h4>
      <p>Get started by <%= link_to 'creating a new project', new_project_path, class: 'fw-bold text-primary' %>.</p>
    </div>
  <% end %>
</div>
